@model IEnumerable<MrVeggie.Models.Receita>
@{ int i = 0;}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>MrVeggie</title>
</head>
<body>


    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @foreach (var r in Model) {
                if (i == 0) {
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="@r.url_imagem" alt="First slide">
                        <div class="carousel-caption d-none d-md-block div_slide">
                            <a asp-controller="ReceitaView" asp-action="showReceita" asp-route-id="@r.id_receita" id="receita" >@r.nome</a>
                        </div>
                    </div>
                    i++;
                }
                else {
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@r.url_imagem" alt="First slide">
                        <div class="carousel-caption d-none d-md-block div_slide">
                            <a asp-controller="ReceitaView" asp-action="showReceita" asp-route-id="@r.id_receita" id="receita">@r.nome</a>
                        </div>
                    </div>
                }

            }
            
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</body>
</html>