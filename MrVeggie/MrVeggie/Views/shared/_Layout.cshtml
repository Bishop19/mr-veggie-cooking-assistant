<!DOCTYPE html>
<html>

<head>
    <!-- Mobile Specific Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Favicon-->
    <link rel="shortcut icon" type="image/x-icon" href="~/img/favicon.ico">
    <!-- Author Meta -->
    <meta name="author" content="MrVeggie">
    <!-- Meta Description -->
    <meta name="description" content="">
    <!-- Meta Keyword -->
    <meta name="keywords" content="">
    <!-- meta character set -->
    <meta charset="UTF-8">
    <!-- Site Title -->
    <title>MrVeggie</title>

    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:400,400i|Roboto:400,500" rel="stylesheet">
    <!--
            CSS
            ============================================= -->
    <link rel="stylesheet" href="~/css/linearicons.css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/availability-calendar.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">
    <link rel="stylesheet" href="~/css/nice-select.css">
    <link rel="stylesheet" href="~/css/owl.carousel.css">
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/css/main.css">
</head>

<body>

    <!--================ Start Header Area =================-->
    <header class="header-area">
        <div class="container">
            <div class="header-wrap">
                <div class="header-top d-flex justify-content-between align-items-center navbar-expand-md">
                    <div class="col menu-left">
                        <a id="home" asp-controller="Home" asp-action="Index">Início</a>
                        <a id="receitas" asp-controller="ReceitaView" asp-action="showReceitas">Receitas</a>
                        <a id="ingredientes" asp-controller="IngredienteView" asp-action="showIngredientes">Ingredientes</a>
                    </div>
                    <div class="col-3 logo">
                        <a asp-controller="Home" asp-action="Index"><img class="mx-auto" src="~/img/Logo.png" alt=""></a>
                    </div>
                    <nav class="col navbar navbar-expand-md justify-content-end">

                        <!-- Toggler/collapsibe Button -->
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                            <span class="lnr lnr-menu"></span>
                        </button>

                        <!-- Navbar links -->
                        <div class="collapse navbar-collapse menu-right" id="collapsibleNavbar">
                            <ul class="navbar-nav justify-content-center w-100">
                                <li class="nav-item hide-lg">
                                    <a class="nav-link" asp-controller="Home" asp-action="Index">Início</a>
                                </li>
                                <li class="nav-item hide-lg">
                                    <a class="nav-link" asp-controller="ReceitaView" asp-action="showReceitas">Receitas</a>
                                </li>
                                <li class="nav-item hide-lg">
                                    <a class="nav-link" asp-controller="IngredienteView" asp-action="showIngredientes">Ingredientes</a>
                                </li>

                                <li>
                                    <form class="form-inline" asp-controller="ReceitaView" asp-action="showReceitasSearch" method="post">
                                        <input class="form-control mr-sm-2" type="search" name="searchBar" placeholder="Procurar" aria-label="Procurar" style="width:90%">
                                    </form>
                                </li>
                                <!-- Dropdown -->
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                                            Área Privada
                                        </a>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" asp-controller="AgendaView" asp-action="ShowAgenda">Agenda</a>
                                            <a class="dropdown-item" asp-controller="HistoricoView" asp-action="showHistorico">Histórico</a>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" asp-controller="UserView" asp-action="ReceitasPref">Receitas preferidas</a>
                                            <a class="dropdown-item" asp-controller="UserView" asp-action="IngredientesPref">Ingredientes preferidos</a>
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item" asp-controller="UserView" asp-action="Logout">Logout</a>
                                        </div>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="UserView" asp-action="RegistaUtilizador">Registar</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="UserView" asp-action="LoginUtilizador">Login</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!--================ End Header Area =================-->


    <div class="container">

        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>


    <!--================ Start Footer Area =================-->
    <footer class="border-top footer text-muted" style="background:lightgrey;">
        &copy; 2019 - MrVeggie
        <a style="float:right" asp-controller="Home" asp-action="AboutUs">Sobre Nós</a>
    </footer>



    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <!--
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>-->

    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/js/vendor/jquery-2.2.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4"
            crossorigin="anonymous"></script>
    <script src="~/js/vendor/bootstrap.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.sticky.js"></script>
    <script src="~/js/parallax.min.js"></script>
    <script src="~/js/jquery.nice-select.min.js"></script>
    <script src="~/js/jquery.ajaxchimp.min.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/bootstrap-datepicker.js"></script>
    <script src="~/js/main.js"></script>


</body>
</html>