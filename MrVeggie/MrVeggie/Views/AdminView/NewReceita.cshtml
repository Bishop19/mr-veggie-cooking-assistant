@model MrVeggie.Models.Pages.NewReceita

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}


    <h1>Adicionar Receita</h1>


    <form asp-action="registaReceita" method="post">
        <div class="form-group">
            <label asp-for="receita.nome" class="control-label"></label>
            <input asp-for="receita.nome" class="form-control" />
            <span asp-validation-for="receita.nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="receita.desc" class="control-label"></label>
            <input asp-for="receita.desc" class="form-control" />
            <span asp-validation-for="receita.desc" class="text-danger"></span>
        </div>
        <div class="form-group">
            <!--DROPDOWN-->
            <label asp-for="receita.dificuldade" class="control-label"></label>
            <input asp-for="receita.dificuldade" class="form-control" min="1" max="3"/>
            <span asp-validation-for="receita.dificuldade" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="receita.tempo_conf" class="control-label"></label>
            <input asp-for="receita.tempo_conf" class="form-control" min="0"/>
            <span asp-validation-for="receita.tempo_conf" class="text-danger"></span>
        </div>
        <div class="form-group" >
            <label asp-for="receita.calorias" class="control-label"></label>
            <input asp-for="receita.calorias" class="form-control" min="0"/>
            <span asp-validation-for="receita.calorias" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="receita.n_pessoas" class="control-label"></label>
            <input asp-for="receita.n_pessoas" class="form-control" min="0"/>
            <span asp-validation-for="receita.n_pessoas" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="receita.url_imagem" class="control-label"></label>
            <input asp-for="receita.url_imagem" class="form-control" />
            <span asp-validation-for="receita.url_imagem" class="text-danger"></span>
        </div>
        <div class="form-group" name ="utensilios">
            <select id="uts" name="uts" multiple class="form-control form-control-sm">
                @foreach (var utensilio in Model.utensilios)
                {
                    <option value="@utensilio.id_utensilio">@utensilio.nome</option>
                }
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Registar" class="btn btn-default btn-success" />
        </div>
</form>