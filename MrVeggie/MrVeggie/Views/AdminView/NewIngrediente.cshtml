@model MrVeggie.Models.Ingrediente

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    ViewData["Title"] = "NewIngrediente";
}

<section class="banner-area relative">
    <div class="container">
        <div class="row height align-items-center justify-content-center">
            <div class="banner-content col-lg-5">
                <h1 style="font-size:150%">Adicionar Ingrediente</h1>
                <hr>
                <div class="breadcrmb">
                    <p>
                        <a asp-controller="AdminView" asp-action="Index">Início</a>
                        <span class="lnr lnr-arrow-right"></span>
                        Admin
                        <span class="lnr lnr-arrow-right"></span>
                        <a asp-controller="AdminView" asp-action="NewIngrediente">Adicionar Ingrediente</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>


<form asp-action="registaIngrediente">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="nome" class="control-label"></label>
        <input asp-for="nome" class="form-control" />
        <span asp-validation-for="nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="url_imagem" class="control-label"></label>
        <input asp-for="url_imagem" class="form-control" />
        <span asp-validation-for="url_imagem" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Registar" class="btn btn-default btn-success" />
    </div>
</form>

