
@model ReceitaAndIngredienteViewModel
@{
    ViewData["Title"] = "Receitas";
    string dificuldade;
    string dificuldade_img;
    string star_img;
}


<link href="~/css/Style.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    .checked {
        color: orange;
    }
</style>

<h1>Receitas</h1>



<div class="dropdown" style="float:right">
    <button class="dropbtn">Filtrar por ingrediente</button>
    <div class="dropdown-content">
        <form asp-action="showReceitas" method="post">
            @foreach (var ingrediente in Model.Ingredientes)
            {
                <input type="checkbox" name=checkboxes value=@ingrediente.id_ingrediente>@ingrediente.nome<br>
            }
            <div class="form-group">
                <input type="submit" value="Filtrar" class="btn btn-default btn-primary" />
            </div>
        </form>
    </div>
</div>



<div class="container-fluid" style="float:left;padding-bottom:75px;">
    <div class="row">
        @foreach (var receita in Model.receitas)
        {
            <div class="col-md-3 shadow p-3 mb-5 bg-white rounded" style="margin: 3px;">
                <div class="row">
                    <div class="container">
                        <img class="d-block w-100" src="@receita.url_imagem">
                    </div>
                </div>
                <div class="row">
                    <div class="container" style="max-height: 30px;padding-top: 20px">
                        <h2>
                            @receita.nome
                        </h2>
                    </div>
                    <div class="container" style="display:inline-block">
                        <div class="row" style="padding-top: 70px">
                            <div class="column" style="float: left; width: 33.33%; padding: 35px;">
                                <figure>
                                    @{
                                        if (receita.dificuldade == 1)
                                        {
                                            dificuldade = "Fácil";
                                            dificuldade_img = "facil.png";
                                        }
                                        else if (receita.dificuldade == 2)
                                        {
                                            dificuldade = "Média";
                                            dificuldade_img = "media.png";
                                        }
                                        else
                                        {
                                            dificuldade = "Difícil";
                                            dificuldade_img = "dificil.png";
                                        }
                                    }
                                    <img id="no_border_img" src="~/images/@dificuldade_img" style="width:100%" />
                                    <figcaption style="text-align: center"> @dificuldade </figcaption>
                                </figure>
                            </div>
                            <div class="column" style="float: left; width: 33.33%; padding: 35px;">
                                <figure>
                                    <img id="no_border_img" src="~/images/pessoa.png" style="width:100%" />
                                    <figcaption style="text-align: center"> @receita.n_pessoas  </figcaption>
                                </figure>
                            </div>
                            <div class="column" style="float: left; width: 33.33%; padding: 35px;">
                                <figure id="element3">
                                    <img id="no_border_img" src="~/images/relogio.png" style="width:100%" />
                                    <figcaption style="text-align: center"> @receita.tempo_conf </figcaption>
                                </figure>
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="column" style="float: left; width: 65%; padding: 25px">
                            @{
                                if (Math.Round(receita.avaliacao) == 1)
                                {
                                    star_img = "star1.png";
                                }
                                else if (Math.Round(receita.avaliacao) == 2)
                                {
                                    star_img = "star2.png";
                                }
                                else if (Math.Round(receita.avaliacao) == 3)
                                {
                                    star_img = "star3.png";
                                }
                                else if (Math.Round(receita.avaliacao) == 4)
                                {
                                    star_img = "star4.png";
                                }
                                else if (Math.Round(receita.avaliacao) == 5)
                                {
                                    star_img = "star5.png";
                                }
                                else
                                {
                                    star_img = "star0.png";
                                }
                            }
                            <img id="no_border_img" src="~/images/@star_img" style="width:100%;"/>
                        </div>
                        <div class="column" style="float: left; width: 35%; padding: 25px">
                            <a class="btn btn-success" asp-controller="ReceitaView" asp-action="showReceita" asp-route-id="@receita.id_receita">Ver</a>
                        </div>
                    </div>
                    

                </div>

            </div>
        }
    </div>
</div>


